<!doctype html>
<html>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Sitename</title>
  {{= it.head() }}
</head>
<body>
  <header>
    <h1>Sitename</h1>
  </header>
  <section class="wrap">
    {{ if(it.hasPost()) { }}
      {{ while(it.hasPost()) { }}
        {{ it.thePost(); }}
          <article class="entry">
            <header>
              <h2>
                <a href="{{= it.post.url.view }}">{{= it.post.title }}</a>
              </h2>
              <p class="author">
                {{= it.post.author.name.full }}
              </p>
              <p class="timestamp">
                {{= it.post.created('Y-m-d') }}
              </p>
            </header>
            {{= it.post.content }}
          </article>
      {{ } }}
    {{ } }}
  </section>
  <footer>
    <p>Something nice</p>
  </footer>
  {{= it.foot() }}
</body>
</html>
